<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Episodes.nokiaActivity">
     ,  ,nokia 5.4,nokia 1280





    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back"
                android:layout_width="56dp"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_height="56dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:padding="15dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="56dp"
                android:textColor="@color/textTitle"
                android:gravity="center|center_vertical"
                android:text="شرکت نوکیا"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="20sp"
                />
        </RelativeLayout>




    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:background="@drawable/nokia"
        android:alpha="0.16"
        android:layout_centerInParent="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >










            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nokiaText"
                android:lineSpacingExtra="12sp"
                android:textSize="17sp"
                android:layout_marginTop="60dp"
                android:textColor="@color/black"
                android:justificationMode="inter_word"

                android:padding="10dp"

                />

            <TextView
                android:id="@+id/newMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="برخی از مدل ها"
                android:layout_below="@+id/text"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newMobile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:src="@drawable/pure"
                            android:scaleType="centerCrop"
                            android:padding="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nokia 9 Pureview"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:src="@drawable/hashtose"
                            android:scaleType="centerCrop"
                            android:padding="11dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nokia 8.3"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:src="@drawable/panjochar"
                            android:scaleType="centerCrop"
                            android:padding="24dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nokia 5.4"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nokia1280"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="180dp"
                            android:layout_height="240dp"
                            android:src="@drawable/old"
                            android:scaleType="centerCrop"
                            android:padding="22dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nokia 1280"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp" />
                    </LinearLayout>




                </LinearLayout>

            </HorizontalScrollView>




        </RelativeLayout>

    </ScrollView>









</RelativeLayout>